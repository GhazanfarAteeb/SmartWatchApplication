<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Activities.ui.profile.ProfileFragment">
	
	<LinearLayout
		android:layout_margin="7dp"
		android:id="@+id/ll_title"
		style="@style/Widget.AppCompat.Toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="15dp">
		
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="20dp"
			android:fontFamily="@font/montserrat_bold"
			android:text="Acction Information"
			android:textColor="@color/black"
			android:textSize="22sp" />
	</LinearLayout>
	
	<LinearLayout
		android:layout_below="@id/ll_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<com.google.android.material.textfield.TextInputLayout
			android:foregroundTint="@color/brown"
			android:id="@+id/et_name"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Name"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false"
			>
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:textSize="14sp"
				android:text="Usama Shaukat" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_address"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Address"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="Allama Iqbal Town, Lahore" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_phone_no"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/et_address"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Phone Number"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="03007000050" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_license_no"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/et_phone_no"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="License Number"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="XX-XXXX-XXXX-XXX" />
		
		</com.google.android.material.textfield.TextInputLayout>
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_doj"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/et_license_no"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Date of Joining"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="28th May 2020" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:baselineAligned="false"
			android:orientation="horizontal"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/et_vehicle_name"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:contextClickable="false"
				android:focusable="false"
				android:hint="Vehicle Name"
				app:expandedHintEnabled="true"
				android:focusableInTouchMode="false">
				
				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="false"
					android:focusable="false"
					android:text="Honda" />
			
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/et_manu_by"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_weight="1"
				android:contextClickable="false"
				android:focusable="false"
				android:hint="Manufacturer Name"
				app:expandedHintEnabled="true"
				android:focusableInTouchMode="false">
				
				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="false"
					android:focusable="false"
					android:text="Honda" />
			
			</com.google.android.material.textfield.TextInputLayout>
		</LinearLayout>
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_engine_number"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Engine Number"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="XXXX-XXXX-XX" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_chassis_no"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Chassis Number"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="XXXX-XXX-XXXX-X" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/et_vehicle_type"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="30dp"
			android:contextClickable="false"
			android:focusable="false"
			android:hint="Vehicle Type"
			app:expandedHintEnabled="true"
			android:focusableInTouchMode="false">
			
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:focusable="false"
				android:text="SUV" />
		
		
		</com.google.android.material.textfield.TextInputLayout>
		
		<Button
			
			android:id="@+id/btn_login"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="30dp"
			android:background="@drawable/button_bg"
			android:drawableEnd="@drawable/ic_arrow_next"
			android:elevation="5dp"
			android:fontFamily="@font/montserrat_medium"
			android:padding="20dp"
			android:text="Logout"
			android:textAlignment="center"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textSize="16sp" />
	
	</LinearLayout>
</RelativeLayout>